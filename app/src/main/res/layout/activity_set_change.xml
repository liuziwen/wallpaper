<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.example.lzw.wallpaper.Hlp">


    <TextView
        android:text="使用帮助"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginBottom="10dp">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_marginRight="10dp"/>

        <TextView
            android:text="打开系统相册，从相册中挑选一张图片"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>


    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginBottom="10dp">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addm"
            android:layout_marginRight="10dp"/>

        <TextView
            android:text="sd卡浏览器，从sd卡的文件夹挑选图片，单击图片即添加成功，可以一次添加多张图片，"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TextView
        android:text="点击“ALBUMS”按钮一次只能添加一张图片，添加图片后，点击开始按钮开始自动更换壁纸，更换频率可以自己设置；单击图片会进入图片编辑模式；长按图片会弹出选择框，此时单击选择要删除的图片，按下弹出的删除按钮即完成删除。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="图片编辑模式"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

    <TextView
        android:text="模糊："
       android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:text="点击模糊按钮，可以使图片模糊，多次点击可以加深模糊程度。"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</TableRow>

    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:text="文字："
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="点击文字按钮，会弹出对话框，选择合适的颜色，文字大小建议20——50。用手指拖动到想要的位置"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:text="画笔："
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="颜色设置和文字一样，粗细根据需要设置。"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</TableRow>

    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:text="保存："
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="图片会被保存在wallpaper文件夹下。"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>



</LinearLayout>
